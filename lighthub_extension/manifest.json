{
  "manifest_version": 3,
  "name": "LightHub Phishing Detector",
  "version": "1.9",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "LightHub Analysis",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["background.jpg"],
      "matches": ["<all_urls>"]
    }
  ]
}